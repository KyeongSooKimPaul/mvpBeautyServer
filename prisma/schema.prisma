  productId String?
  orderId String?
  productName String?
  productPrice String?
  productQty String?
  productKeepQty String?
    orderaddress String  @default("no")
  demandproductKeepQty String @default("0")
  messagefromcustomer String @default("no")
  messagefromadmin String @default("no")
