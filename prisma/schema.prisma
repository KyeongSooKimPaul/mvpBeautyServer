  createdAt DateTime @default(now())
  userId  Int?
  User    User?    @relation(fields: [userId], references: [id])
  keepId Int
  productId String?
  productName String?
  productPrice String?
  productQty String?
  productKeepQty String?
}



model KeepOrder {
  id      Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  userId  Int?
